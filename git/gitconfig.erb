[user]
	name = Pieter Eerlings
	email = pieter.eerlings@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = "mate -w"
	autocrlf = input
[apply]
	whitespace = fix
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[alias]
	co = checkout
	s = status
[github]
	user = pietere
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
